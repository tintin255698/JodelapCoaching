{% extends 'base.html.twig' %}

{% block title %}JodelapCoaching - Connexion{% endblock %}

{% block body %}
    {% for label, messages in app.flashes  %}
        <div class="alert mt-5 alert-{{ label }} alert-dismissible fade show text-center">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor%}
        </div>
    {% endfor %}
<section class="log">
<form method="post" style="margin-top: 10%">
    <div class="container text-cente">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    </div>
    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    <div class="container connexion mb-3" style="color: white; position: relative">

    <h1 class="text-center mt-5 mb-3"   style="font-size:3.5em" >Merci de saisir vos identifiants de connexion </h1>
    <h2 class="text-center mb-5" style="font-size: 2.2em">Ou enregistrez-vous
        <a href="{{ path('app_register') }}" class="ici">ici</a> </h2>
    
    <label class="mb-3" style="color: #4F4F4F; margin-top: 87px" for="inputEmail">Votre email :</label>
    <input type="email" value="{{ last_username }}" placeholder="Votre email" name="Email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mt-3 mb-3" style="margin-top: 5%!important; color: #4F4F4F">Votre mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Votre mot de passe" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class=" mt-5 shad" type="submit">
        Connexion
    </button>
        <div style="position: relative">
            <h4 class="text-center fog">Vous vous ne souvenez plus de votre mot de passe cliquez <a href="{{ path('app_forgot_password_request') }} " class="ici" >ici</a></h4>
        </div>
    </div>

</form>
    </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% for label, messages in app.flashes  %}
        <div class="alert mt-5 alert-{{ label }} alert-dismissible fade show text-center">
            {% for message in messages %}
                <p>{{ message }}</p>
            {% endfor%}
        </div>
    {% endfor %}

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}
    <div class="container connexion mb-5">

    <h1 class="text-center mb-5" style="color: white; font-style: italic;  margin-top: 10%!important; font-weight: bold" >Merci de saisir vos identifiants de connexion</h1>
    <label class="mb-3" for="inputEmail" style="color: #ffa012 ">Votre email :</label>
    <input type="email" value="{{ last_username }}" placeholder="Votre email" name="Email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mt-3 mb-3" style="color: #ffa012; margin-top: 5%!important;">Votre mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Votre mot de passe" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-light mt-5 " type="submit">
        Connexion
    </button>

    </div>

</form>
{% endblock %}

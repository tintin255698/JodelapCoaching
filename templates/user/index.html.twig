{% extends 'base.html.twig' %}

{% block title %}Jodelap Coaching - Profil personnel -{% endblock %}

{% block body %}

    {% include 'navbar/navbar.html.twig' %}


    <div style="background-color: black; padding-top: 90px; padding-bottom: 40px">


        <a href="{{ path('home') }}">
            <img src="{{ asset('img/SITEBLANC.png') }}" style="filter: brightness(40%)"  class="img-fluid displayed mt-4" alt="Logo">
        </a>
    </div>

    <div class="global-container">

    <h1 class="text-center  titre">Votre profil</h1>

    <section class="container mt-5">

        {% for label, messages in app.flashes  %}
            <div class="alert mb-5 alert-{{ label }} fade show text-center" role="alert" data-mdb-color="{{ label }}"   style="font-size: x-large">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor%}
            </div>
        {% endfor %}

        <div class="row mt-5" >
            <div class="col">
                {% include 'navbar/navbarVertical.html.twig' %}
            </div>
            <div class="col-lg-4 col-12">
                <p class="text-center mt-3"><strong>Votre prénom :</strong> {{ app.user.FirstName }}</p>
                <p class="text-center mt-3"><strong>Votre nom :</strong> {{ app.user.LastName }}</p>
            </div>
            <div class="col-lg-6 col-12">
                <p class="text-center mt-3"><strong>Votre email :</strong> {{ app.user.Email }}</p>
                <p class="text-center mt-3"><strong>Votre téléphone :</strong> {{ app.user.telephone }}</p>

            </div>
        </div>

    </section>


</div>

    {% include 'navbar/footer.html.twig' %}

{% endblock %}

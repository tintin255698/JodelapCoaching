           and app.user %}
                                       <a href="{{ path('evenement_add', {'id' : evenementDetail.id }) }}"> <button class="btn btn-dark mt-5 text-right">Réserver</button></a>
                                   {% else %}
                                       <p class="mt-3"><i class='bx bx-info-circle' ></i>Vous devez être <a href="{{ path('app_login') }}">connecté</a> pour réserver</p>
                                   {% endif %}

                                     if(!$this->getUser()){
                                               $this->addFlash('info', "Vous devez être connecté pour réserver");
                                               return  $this->redirectToRoute('app_login');
                                           }
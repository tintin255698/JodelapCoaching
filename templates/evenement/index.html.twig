{% extends 'base.html.twig' %}

{% block title %}Les évènements{% endblock %}

{% block body %}

        <section class="container-fluid text-center">

            <a href="{{ path('home') }}">
                <img src="{{ asset('img/capture1.PNG') }}"  class="img-fluid displayed" alt="Logo">
            </a>
            <h1 class="mb-5 mt-5"><strong>Mes Événements du {{ debut|date("d/m/Y") }} au {{ fin|date("d/m/Y") }} </strong></h1>
            {% if evenement|length > 0 %}
            <div class="row">

                {% for events in evenement %}
                <div class="col-lg-4 col-md-12 mb-4">
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <img src="uploads/evenement/{{ events.image }}" alt="{{ events.titre }}" class="img-fluid" />
                            <a href="{{ path('evenement_detail', {'slug': events.slug} )}}">
                                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="card-title mb-4">
                                <h4 class="card-title mb-3">Le {{ events.dateTime|date("d/m/Y") }}</h4>
                                <h3 class="mt-3"><strong>{{ events.titre }}</strong></h3>
                            </div>
                            <div class="card-text">
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover table-dark border-light">
                                        <thead>
                                        <tr>
                                            <th scope="col"> <i class='bx bx-time-five'></i></th>
                                            <th scope="col"> <i class='bx bx-location-plus'></i></th>
                                            <th scope="col"> <i class='bx bx-male-female'></i></th>
                                            <th scope="col"><i class='bx bx-euro'></i></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>De {{ events.dateTime|date("H:m") }} à {{ events.finSession|date("H:m") }}</td>
                                            <td>{% if events.lieu %}
                                                    A {{ events.ville }}-{{ events.lieu }}
                                                {% else %}A {{ events.ville }}
                                                {% endif %}</td>
                                            <td>{{ events.niveau }}</td>
                                            <td>{{ events.prix/100}}€</td>
                                            <td> <a href="{{ path('evenement_detail', {'slug': events.slug} )}}" class="btn btn-light">Détails</a></td>
                                        </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
{% endfor %}
            </div>
                {% else %}
                <h3 class="text-center mt-5">Il n'y a pas de sessions pour le moment <i class='bx bx-smile'></i></h3>
                <h4 class="mt-5 text-center">Toutefois, vous pouvez : <br></h4>

                <div class="row mt-5 mb-5 text-center">
                    <div class="col-md">
                        <a href="{{ path('coaching') }}">
                            <button type="button" class="btn btn-danger mr-2">Réserver un cours de coaching particulier</button>
                        </a>
                    </div>
                    <div class="col-md text-center">
                        <a href="{{ path('evenement') }}">
                            <button type="button" class="btn btn-danger ml-2">Offrir une carte cadeau</button>
                        </a>
                    </div>
                    {% endif %}
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(evenement) }}

            </div>
        </section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}JodelapCoaching - Galerie{% endblock %}

{% block body %}
    <a href="{{ path('home') }}">
        <div class="parallax" style="background-image:url('{{ asset('../../img/avis.jpg')}}')"></div>
    </a>

    <h1 class="text-center titre">Nos photos</h1>

<div class="container-fluid">


    <div class="row">
        {% if image > 0 %}
            {%  for images in image %}
                <div class="col-lg-3 col-4">
                    <div class="gallery-item">
                        <a href="{{ vich_uploader_asset(images, 'imageFile') }}" class="venobox" data-maxwidth="800px"  data-gall="gallery-item">
                            <img src="{{ vich_uploader_asset(images, 'imageFile')}}" alt="galerie VTT MCF" style="border-radius: 10px" class="img-fluid transition">
                        </a>

                    </div>
                </div>
            {%  endfor %}
        {% endif %}
    {% if video |length > 0 %}
        <h1 class="text-center top2 titre">Nos vid√©os</h1>
    {% for videos in video %}
        <div class="col-lg-3 col" style="background-image: url('../../img/LOGO.png') ">
            <div class="gallery-item">
        <video style="border-radius: 10px" class="mx-auto d-block transition" controls width="250">
            <source src="{{vich_uploader_asset(videos, 'imageFile') }}">
        </video>
            </div>
        </div>
    {% endfor %}
{% endif %}
</div>
    </div>

<script>
    new VenoBox({
        selector: '.venobox',
        infinigall: true,
        spinner: 'bounce',
        navigation:true
    });
</script>





{% endblock %}

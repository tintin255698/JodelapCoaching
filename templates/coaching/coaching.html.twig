{% extends 'base.html.twig' %}

{% block title %}JodelapCoaching - Nombre de participants{% endblock %}

{% block body %}

    {% include 'navbar/navbar.html.twig' %}

<div style="background-color: black; padding-top: 90px; padding-bottom: 40px">


    <a href="{{ path('home') }}">
        <img src="{{ asset('img/SITEBLANC.png') }}" style="filter: brightness(40%)"  class="img-fluid displayed mt-4" alt="Logo">
    </a>
    </div>

    <div class="global-container">
            <h1 class="text-center titre">Nombre de personnes avec vous pour la session</h1>


            <div class="container" style="margin-top: 10%">
                {{ form_start(form) }}

                {{ form_row(form.personne, {'attr': {'onkeyup': 'lecture()'}}) }}
                <div style="display: none" id="info" class="mt-5">
                    {{ form_row(form.information) }}
                </div>

                <div class="text-end mt-5">
                    {{ form_row(form.valider) }}
                </div>

                {{ form_end(form) }}

</div>
    </div>


    <script>
        function lecture()
        {
            var valeur = document.getElementById('personne_personne').value;
            console.log(valeur)
            if (valeur > 0){
                document.getElementById('info').style.display = "block"
            }else (
                document.getElementById('info').style.display = "none"
            )
        }
    </script>

    {% include 'navbar/footer.html.twig' %}


{% endblock %}
                </div>
                <div class="card-body bg-white mt-0 shadow">
                    <ul class="list-unstyled mb-5 position-relative">
                        <li><b>{{ coachings.priceForTwo }}€</b>pour <strong>deux</strong> personnes</li>
                        <li><b>+ {{ coachings.priceForThree }}€</b>pour <strong>chaque</strong> personne supplémentaire</li>
                    </ul>
                    <a href="{{ path('coaching_add', {'slug':coachings.slug}) }}">  <button type="button" class="btn  btn-dark  btn-lg btn-block  ">Réserver</button></a>
                </div>
            </div>

{% endfor %}

        </div>
    </div>
<div class="container-fluid">
    <section id="contact" class="contact">

{% endblock %}